{%- style -%}
  .section-{{ section.id }}-padding {
    background: {{ section.settings.extra_background }};
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  }
{%- endstyle -%}


<section class="section-{{ section.id }}-padding" >
  <div class="brands page-width">
    <div class="brands__info">
      {% if section.settings.brands_title != blank %}
        <h2>{{ section.settings.brands_title }}</h2>
      {% endif %}
      <div class="brands__info-swiper js-brands__info-swiper swiper">
        <ul class="brands__info-list swiper-wrapper">
          {% for block in section.blocks %}
            {% if block.settings.brands_logo != blank %}
              <li class="brands__info-item swiper-slide">
                <img src="{{ block.settings.brands_logo | image_url: width: 200 }}">
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
  "name": "Discount brands",
  "settings": [
    {
      "type": "text",
      "id": "brands_title",
      "label": "Brands title",
      "default": "AS SEEN IN"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    { 
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "blocks": [
      {
      "name": "Brands item",
      "type": "text",
      "settings": [
        {
          "type": "image_picker",
          "id": "brands_logo",
          "label": "Brands image"
        }
    ]
  }
],
  "presets": [
    {
      "name": "Discount brands"
    }
  ]
}

{% endschema %}


